  "vegetation_tuning": {
    "enabled": true,
    "strength": 1.0,
    "mask": {
      "exg_threshold": 20.0,
      "exg_softness": 15.0,
      "rg_ratio_threshold": 1.05,
      "rg_ratio_softness": 0.1,
      "gb_ratio_threshold": 1.05,
      "gb_ratio_softness": 0.1,
      "use_ndvi": true,
