{
  "source": {
    "channel_order": "RGBI",
    "calibration_tiles": [
      "D:/SCRIPTS/DADOS/AREA_01/calibracao/*.tif"
    ],
    "apply_tiles": [
      "D:/SCRIPTS/DADOS/AREA_01/tiles/*.tif"
    ]
  },
  "reference": {
    "rgb_channel_order": "RGB",
    "rgb_images": [
      "D:/SCRIPTS/DADOS/REF_EMPRESA/RGB/*.tif"
